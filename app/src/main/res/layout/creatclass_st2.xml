<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textViewAttendSit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="出席狀況"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textViewAStotal"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="出席佔學期總成績"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTexttotalPoints"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_border_creatclass_s2"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="分"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textViewlate"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="遲到"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewlateminus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="扣"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextlateMinus"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_border_creatclass_s2"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textViewlateminusp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="分"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textViewAbsentee"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="曠課"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewAbsenteeMinus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="扣"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextAbsenteeMinus"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_border_creatclass_s2"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textViewAbsenteeMinusp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="分"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textViewEarlywarning"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="預警"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textViewAbsenteeTimes"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="累積曠課"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextEWTimes"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_border_creatclass_s2"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="次"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="出席成績低於"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextEWPoints"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_border_creatclass_s2"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="分"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="課堂參與"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="點人回答"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="加"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextAnswerBonus"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_border_creatclass_s2"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="分"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="隋棠問答"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="加"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextRDBonus"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_border_creatclass_s2"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="分"
                android:textSize="20dp" />


        </LinearLayout>

        <ListView
            android:id="@+id/msg_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#0000"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonSendout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="完成"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>