                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="辦公室"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTeacherOffice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
