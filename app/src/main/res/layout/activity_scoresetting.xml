                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:text="editText"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    tools:text="程式設計"/>

            </LinearLayout>

            <Button
